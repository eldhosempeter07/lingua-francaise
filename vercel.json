{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Content-Type": "text/html"
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "Content-Type": "text/javascript"
      }
    },
    {
      "src": "/(.*)\\.js",
      "headers": {
        "Content-Type": "text/javascript"
      }
    }
  ]
}
